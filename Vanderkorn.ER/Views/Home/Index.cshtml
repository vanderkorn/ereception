
<!DOCTYPE html>
<html data-ng-app="EReceptionApp" ng-controller="IndexController">
<head>

    <meta name="keywords" content="Way Store" />
    <meta name="description" content="Way Store is a cross-platform service to sell and take the courses" />
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible" />
    <title ng-bind="models.helloAngular"></title>
 
    @Styles.Render("~/Content/css")
    @*<link href="/Content/fontawesome/font-awesome.css" rel="stylesheet">*@
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" >
        <div class="container">
            <div class="navbar-header">
                <button class="btn btn-success navbar-toggle" data-ng-click="navbarExpanded = !navbarExpanded">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </button>
                <a class="navbar-brand" href="#/">Электронная приёмная</a>
            </div>
            <div class="collapse navbar-collapse" data-collapse="!navbarExpanded">
                <ul class="nav navbar-nav navbar-right">
                    <li data-ng-hide="!authentication.isAuth"><a href="#">Добро пожаловать, {{authentication.userName}}</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="/#/reception">Приёмная</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="/#/manage">Управление аккаунтом</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="" data-ng-click="logOut()">Выйти</a></li>
                    <li data-ng-hide="authentication.isAuth"> <a href="/#/login">Войти</a></li>
                    <li data-ng-hide="authentication.isAuth"> <a href="/#/register">Регистрация</a></li>
                </ul>
            </div>
        </div>
    </div>

    
    <div class="jumbotron">
        <div class="container">
            <p>Добро пожаловать! </p>
        </div>
    </div>
    

    <div class="container-fluid">
        <div data-ng-view="">
           
        </div>
    
</div>
    </div>

    <hr />

    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted">Создано Van Der Korn. Сайт: <a target="_blank" href="http://vanderkorn.com">vanderkorn.com</a></p>
                </div>
                <div class="col-md-6">
                    <p class="text-muted">Электронный адрес Van Der Korn: <a target="_blank" href="mailto:vanderkorn@gmail.com">vanderkorn@gmail.com</a></p>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/EReceptionApp")

</body>
</html>